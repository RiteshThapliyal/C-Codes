# Traversing the array - means print all the element using loop

#include <stdio.h>

int main() {
    
    int myArr[] = {2, 5, 6, 3, 9};
    
    int length = sizeof(myArr) / sizeof(myArr[0]);
    
    for (int i = 0; i <= length - 1; i ++){
        printf("%d \n", myArr[i]);
    }
    
    return 0;
}


# Searching - searching the user input element in the array

#include <stdio.h>

int main() {

    int user_input = printf("Enter the element you want to search in array: ");
    scanf("%d", &user_input);
    
    int arr[] = {4, 2, 7, 9, 1};
    
    int length = sizeof(arr) / sizeof(arr[0]);
    
    for (int i = 0; i <= length - 1; i ++){
        if (user_input == arr[i]){
            printf("Entered Element is present in the Array");
            break;
        }
    }

    return 0;
}
